@using MVCSchool.DTO

@model GradeDTO

<h4>Update a grade</h4>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="StudentId" class="control-label"></label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    </div>
    <div>
        <label asp-for="SubjectId" class="control-label"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"></select>
    </div>
    <div>
        <label asp-for="Topic"></label>
        <input type="text" asp-for="Topic" class="form-control" />
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Mark"></label>
        <input type="number" asp-for="Mark" min="1" max="5" class="form-control" />
        <span asp-validation-for="Mark" class="text-danger"></span>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Save changes" />
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
